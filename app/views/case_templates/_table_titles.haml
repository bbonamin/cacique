%tr
  //     CASE TEMPLATE INDEX
  -if @controller_data == 'case_templates'
    %th.def{:style => "width:3%;"}
      %input{ :type => "checkbox", :name => 'todos', :id => 'todos_'+circuit.id.to_s, :value => "checkbox", :onClick => "listItems(#{circuit.id},this.form);"}
    %th.def{  :style => "width:3%;"}

  //    SUITE COMMENT
  -if @controller_data == 'suite_executions'
    %th.def{:style => "width:3%;"}
      %input{ :type => "checkbox", :name => 'todos', :id => 'todos_'+circuit.id.to_s, :value => "checkbox", :onClick => "listItems(#{circuit.id},this.form);RelacionesRotasAll(#{circuit.id});"}

  //   SUITE EDIT
  -if @controller_data == 'suites'
    %th.def{:style => "width:3%"}
      %input{ :type => "checkbox", :name => 'todos', :id => 'todos_'+circuit.id.to_s, :value => "checkbox", :onClick => "update_cases_all(#{@suite.id},#{circuit.id},this);listItems(#{circuit.id},this.form);"}

  //    GENERAL
  -for column in columns_template
    -if !@exclude_show.include?(column.to_sym)
      %th.def{ :class => "sortable"}
        =h column
  -for column in columns_data
    -if !@exclude_show_data.include?(column.to_sym)
      //If the columns if default
      -if @cell_selects.keys.include?(column)
        %th.def{ :class => "sortable"}
          =truncate(h(column), :ommision => "...", :length => 20)
      -else
        %th{ :class => "sortable"}
          =truncate(h(column), :ommision => "...", :length => 20)