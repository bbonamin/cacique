%td{:title=>cron.min}
  =truncate( cron.min, :ommision => '...', :length => 3)  
    
%td{:title=>cron.hour}
  =truncate( cron.hour, :ommision => '...', :length => 3)  

%td{:title=>cron.day_of_month}
  =truncate( cron.day_of_month, :ommision => '...', :length => 3)  

%td{:title=>cron.month}
  -months = cron.month.split(/,|\/|-/).map{ |d| Date::ABBR_MONTHNAMES[d.to_i]}.join(', ')
  -if months.empty?
    =truncate( cron.month, :ommision => '...', :length => 5) 
  -else 
    =truncate( months, :ommision => '...', :length => 5)  
%td{:title=>cron.day_of_week}
  -days_of_week = cron.day_of_week.split(/,|\/|-/).map{|d| Date::ABBR_DAYNAMES[d.to_i]}.join(', ')
  -if days_of_week.empty?
    =truncate( cron.day_of_week, :ommision => '...', :length => 10) 
  -else 
    =truncate( days_of_week, :ommision => '...', :length => 10) 

