.tag{ :id => "edit", :style=>"left: 40%; height:333px; width:225px; display:none;"}
  =render :partial =>"layouts/popup_header", :locals=>{:element =>"edit"}  

  %div{:style=>"left: 30%; height:30%; width:70%;"}		
    .div_abm{:style=>"color:#FE9A2E;"}
      %img{ :src => "/images/icons/edit.png", :alt=>"edit", :style=>"cursor:pointer; width:20px;heidth:20px;"}
      =_('Edit Project')
      -form_for(:project, :url => project_path(:value), :html => { :method => :put, :style =>" border: 3px ridge #FE9A2E;" }) do |f|
        %label
          =_('Project')
        %select{:id=>"select_edit", :name=>"project_id"}
          -@projects.each do |project|
            %option{ :value =>  project.id}
              =project.name
        %label{:for => "name"}
          =_('Name')
        = f.text_field :name
        %label{:for => "description"}
          =_('Description')
        = f.text_field :description
        %label{:for => "user_id"}
          =_('Manager')
        %select{:name => "user_id", :id => "user_id"}
          -@users.each do |user|
            %option{ :value => user.id}
              =user.login
        %br
        %br
        =submit_tag _('Modify'), :style=>"cursor:pointer;"