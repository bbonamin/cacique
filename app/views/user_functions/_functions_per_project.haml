%h1
  =link_to image_tag('icons/new.png', :alt=>"new.png", :style=>"border:none;"), url_for(:controller => "user_functions", :action => "new", :project_id => project_id), :title=>_("Add Function")
  =_('Functions from ')
  =@project.name

.buscar
  -remote_form_for :search, url_for(:controller=>"user_functions", :action=>"search"), :update => "project_functions" do |f|
    = f.text_field '', :value=>(search.empty? ? _('Search Function') : search), :style => 'width: 130px' , :onblur=>"if (this.value == '') {this.value = '#{_('Search Function')}'; ;this.style.color='grey'};", :onfocus=>"if (this.value == '#{_('Search Function')}') {this.value = '';this.style.color='black'}"
    = text_field 'project', 'id', :value => @project.id, :style => "display:none;"
    %input{:type=>"image",:src=>"/images/icons/search.png"}
%br
%br
=render :partial => "functions", :locals => {:user_functions => @user_functions, :can_move => can_move, :paginate => false}  
