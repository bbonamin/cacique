#!/bin/bash
case "$1" in
  start)
        cd /home/horacio/work/lala/cacique
        exec script/mannager.rb > /dev/null &
        pgrep -f mann > /home/horacio/work/lala/cacique/log/task_manager.pid
  ;;
  stop)
        rm /home/horacio/work/lala/cacique/log/task_manager.pid
        kill `pgrep -f mann`
  ;;
esac
